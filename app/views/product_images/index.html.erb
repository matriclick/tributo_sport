<div class="titulo_style">
	<h1><%= t "product_images" %></h1>
</div>

<table>
	<tr>
		<th>Product</th>
		<th>Image file name</th>
		<th>Image content type</th>
		<th>Image file size</th>
		<th>Image updated at</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @product_images.each do |product_image| %>
	<tr>
		<td><%= product_image.product_id %></td>
		<td><%= product_image.image_file_name %></td>
		<td><%= product_image.image_content_type %></td>
		<td><%= product_image.image_file_size %></td>
		<td><%= product_image.image_updated_at %></td>
