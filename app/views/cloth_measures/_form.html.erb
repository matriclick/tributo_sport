<%= form_for(@cloth_measure) do |f| %>
	<% if @cloth_measure.errors.any? %>
	<div id="error_explanation">
	  	<h2><%= pluralize(@cloth_measure.errors.count, "error") %> prohibited this cloth_measure from being saved:</h2>
		<ul>
			<% @cloth_measure.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
  			<% end %>
		</ul>
	</div>
	<% end %>
	<h2><%= @id == 'current_user' ? 'Tus Medidas' : 'Agregar medidas para '+@size.name %></h2>
	<% if @id != 'current_user' %>
		<%= f.hidden_field :size_id, :value => @size.id %>
	<% end %>
	<p>Solo n√∫meros enteros. No agregues comas ni puntos.</p>
	<div style="float:left">
		<%= image_tag 'el_bazar/medidas.png', alt: 'medidas' %>
	</div>
	<div>
		<h3 style="margin-top:105px">
			Busto <%= f.text_field :bust %> cms
		</h3>
		<h3 style="margin-top:20px">
			Cintura <%= f.text_field :waist %> cms
		</h3>
		<h3 style="margin-top:25px">
			Caderas <%= f.text_field :hips %> cms
		</h3>
		<h3 style="margin-top:150px">
			Zapato <%= f.collection_select :shoe_size_id, ShoeSize.all, :id, :size_cl, :prompt => true, :allow_blank => false %>
		</h3>
		<div style="margin-top:25px">
			  <%= f.submit 'Guardar Medidas', class: 'button_buy_dress_pink' %>
		</div>
	</div>
	<div class="clear"></div>
	<% if !@id.nil? %>
		<%= hidden_field_tag 'id', @id %>
	<% end %>
<% end %>
