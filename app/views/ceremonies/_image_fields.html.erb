<b><%= t 'images' %></b>
<div class="help_tip"><%= t('image_size_limit') %></div>
<div class="field">
	<%= f.fields_for :ceremony_images do |ceremony_images_form| %>
		<%= ceremony_images_form.file_field :image %>
		<%= ceremony_images_form.link_to_remove t('remove_this_image'), :class => 'small_button' %>
	<% end %>
	<br/>
	<%= f.link_to_add t('add_image'), :ceremony_images, :class => 'small_button' %>
</div>
