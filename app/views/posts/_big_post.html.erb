<div class="post_container" style="width:370px; height:350px;">
	<div style="margin:10px">
		<% if !post.main_image_file_name.nil? %>
		<%= link_to image_tag(post.main_image.url(:regular), :alt => post.main_image_name, :class => 'image_button'), post_path(post) %>
		<% else %>
		<%= link_to image_tag('posts/matriclick_argolla.png', :width => '200px', :height => '150px', :class => 'image_button'), post_path(post) %>
		<% end %>
		<div class="blog_titulos">
			<%= link_to post.title, post_path(post) %>
		</div>
		<div class="blog_texto">
			<%= (desc = strip_tags(post.introduction)).blank? ? 
			'PrÃ³ximamente en Matriclick.com' : content_tag(:span, (desc[0..150].gsub(/\n/, '<br/>')).html_safe + ("..." if desc.length > 150) ) %>
		</div>
	</div>
</div>
