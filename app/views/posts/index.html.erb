<div class="right_link">
	<%= link_to 'Volver al menú de Administración', administration_index_path(), :class => :button  %>
</div>


<br /><br />
<h1>Listing posts</h1>
<%= link_to 'Nuevo Post', new_post_path %>
<br />
<table>
  <tr>
	<th>Industry<br> Category</th>
    <th>title</th>
    <th>Content</th>
    <th>Date</th>
	<th>Visible</th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
		<td><%= post.industry_category.present? ? post.industry_category.get_name : "TENDENCIAS" %></td>
		<td><%= post.title %></td>
		
		<td><%= post.introduction %></td>
		
		<td><%= l(post.date) %></td>
		<td><%= post.visible ? 'Sí' : 'No' %></td>
		<td><%= link_to 'Show', post %> | <%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>