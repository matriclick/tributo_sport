<% content_for :content do %>

<p><%= t 'welcome'%> <%= @resource.email %>!</p>

<p><%= t 'you_can_confirm_your_account_through_the_link_below' %></p>

<% puts @resource %>

<p><%= link_to t('confirm_my_account'), confirmation_url(@resource, :confirmation_token => @resource.confirmation_token, :country_url_path => @resource.country.url_path) %></p>


<% end %>

<%= render "layouts/email_template" %>