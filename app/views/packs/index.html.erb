<div style="margin-top:-10px">
	<h1 style="margin-left:10px"><%= @h1 %></h1>
	<h2 style="margin-left:10px"><%= @h2 %></h2>
	<div class="slider_blog" style="margin-left:10px">
		<% @slider_images.each do |slider| %>
			<div class="slider-item">
				<% if !slider.link.nil? %>
		       		<%= link_to (image_tag slider.slider_image(:original), :alt => slider.slider_image_file_name), slider.link, 
						:target => slider.target ? '_self' : '_blank' %>
				<% else %>
					<%= image_tag slider.slider_image(:original), :alt => slider.slider_image_file_name %>
				<% end %>
				<% unless slider.title.blank? %>
		       	<div class="caption"><b><%= slider.title %></b><br /> 
					<% unless slider.content.blank? %>
						<%= slider.content.html_safe %>
					<% end %>
				</div>
				<% end %>
			</div>
		<% end %>
	</div>
	<h3 style="margin-left:20px"><%= @h3 %></h3>
	<div style="margin-left:25px">
	<% @posts.each do |post| %>
		<div class="post_container" style="width:370px; height:300px;">
			<div style="margin:10px">
				<%= link_to image_tag(post.main_image.url(:regular), :alt => post.title, :class => 'image_button'), 
						post_path(post) %>
				<div class="blog_titulos">
					<%= link_to post.title, post_path(post) %>
				</div>
				<div class="blog_texto">
					<%= (desc = strip_tags(post.introduction)).blank? ? 
					'PrÃ³ximamente en Matriclick.com' : content_tag(:span, (desc[0..180].gsub(/\n/, '<br/>')).html_safe + ("..." if desc.length > 180) ) %>
				</div>
			</div>
		</div>
	<% end %>
	<div class="clear"></div>
	</div>
</div>