<% # FGM: Had to hardcore the supplier_layout setter to avoid modifying Devise::RegistrationsController itself %>
<% @supplier_layout = true %>
<div class="right_link">
	<%= link_to t('cancel'), {:controller => "/supplier_accounts", :action => 'show'}, {:class => "button"} %>
</div>
<div class="titulos">
	<%= t 'change_password' %>
</div>
<div class="box_form">
	<%= form_for(resource, :as => resource_name, :url => supplier_registration_path, :html => { :method => :put }) do |f| %>
		<%= devise_error_messages! %>

		<table class="invisible">
			<tr>
				<td class="span-115"><%= f.label :email %></td>
				<td><%= f.email_field :email %></td>
			</tr>
			<tr>
				<td><%= f.label t('new_password') %></td>
				<td class="tiptip" title="<%= t('leave_blank_if_you_dont_want_to_change_it') %>"><%= f.password_field :password %></td>
			</tr>
			<tr>
				<td><%= f.label t('password_confirmation') %></td>
				<td><%= f.password_field :password_confirmation %></td>
			</tr>
			<tr>
				<td><%= f.label t('current_password') %></td>
				<td class="tiptip" title="<%= t('we_need_your_current_password_to_confirm_your_changes') %>"><%= f.password_field :current_password %></td>
			</tr>
		</table>
		
		<%= f.submit t('save'), :class => "submit_button" %>
	<% end %>
</div>
