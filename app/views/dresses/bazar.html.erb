<script>
	$("#main_search").live("blur", function(){
		var default_value = $(this).attr("rel");
		if ($(this).val() == ""){
			$(this).val(default_value);
			$(this).css('color', '#bbb')
		}
	}).live("focus", function(){
		var default_value = $(this).attr("rel");
		if ($(this).val() == default_value){
			$(this).val("");
			$(this).css('color', 'black')
		}
	});
</script>
<h2 style="text-align:center; background:white;">
	<%= notice %>
</h2>