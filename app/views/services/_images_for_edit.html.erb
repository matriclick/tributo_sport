<div id="images_for_edit">
	<div class="product_image_row_caption"><%= t("active_images") %></div>
	<% for service_image in @service.service_images.cover_first.active %>
	<%= render "services/service_image", :service_image => service_image %>
	<% end %>
	<div class="image_for_edit">
		<div class="image_placeholder"></div>
		<div class="name"><%= t 'new_image' %></div>
		<div class="actions">
			<%= link_to t('add'), new_supplier_account_service_service_image_path(@supplier,@service) %>
		</div>
	</div>  

	<div class="product_image_row">
		<div class="product_image_row_caption"><%= t("inactive_images") %></div>
		<% for service_image in @service.service_images.cover_first.inactive %>
		<%= render "services/service_image", :service_image => service_image %>
		<% end %>  
	</div>
</div>
<div class="clear"></div>
