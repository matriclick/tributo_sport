<h1>Reporte de Compras de Vestidos o GiftCards</h1>
<%= render 'date_range_selector' %>
<br /><br />
<table style="width:950px">
	<tr style="">
		<th></th>
		<% @init = @from %>
		<% while @init < @to %>
			<th><%= @init.strftime("%d %b %Y") %></th>
		<% @init = @init + 1.day %>
		<% end %>
		<th><b>Total</b> (acumulado)</th>
	</tr>
	<tr style="">
		<td>Compras Realizadas</td>
		<% @init = @from %>
		<% while @init < @to %>
			<td style="text-align:center">
				<%= count_link_purchases(@init, @init + 1.day, 'finalizado') %>
			</td>
		<% @init = @init + 1.day %>
		<% end %>
		<td style="text-align:center">
			<b><%= count_link_purchases(@from, @to, 'finalizado') %></b> 
			(<%= count_link_purchases(DateTime.new(2010,01,01), @to, 'finalizado') %>)
		</td>
	<tr>
	<tr style="">
		<td>Compras Iniciadas</td>
		<% @init = @from %>
		<% while @init < @to %>
			<td style="text-align:center">
				<%= count_link_purchases(@init, @init + 1.day) %>
			</td>
		<% @init = @init + 1.day %>
		<% end %>
		<td style="text-align:center">
			<b><%= count_link_purchases(@from, @to) %></b> (<%= count_link_purchases(DateTime.new(2010,01,01), @to) %>)
		</td>
	<tr>
</table>
<br /><br />
<%= link_to 'Volver al menú de administración', administration_index_path %>