<%= form_for [@event],:url => supplier_account_event_path(@supplier,@event), :validate => true, :html => {:id => "edit_event_form"} do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
	    <h2><%= @event.errors.count > 1 ? t("activerecord.errors.template.header.other") : t("activerecord.errors.template.header.one") %>:</h2>
	    <ul>
		    <% @event.errors.full_messages.each do |msg| %>
		      <li><%= msg %></li>
		    <% end %>
	    </ul>
    </div>
  <% end %>
  <div class="gray_box">
	  <div class="field">
		  <%= f.label :title %><br />
		  <%= f.text_field :title %>
	  </div>
	  <br />
	  <div class="field">
		  <%= f.label :email %><br />
		  <%= f.text_field :email %>
	  </div>
	  <br />
	  <div class="field">
		  <%= f.label :date %><br />
		  <%= f.text_field :date %>
	  </div>
	  <br />
    <div class="field">
			  <%= f.collection_select(:service_id, @services, :id, :name, :prompt => t('select_service') ) %>
	  </div>
	  <br />
	  <div class="field">
		  <%= f.label :description %><br />
		  <%= f.text_area :description %>
	  </div>
  </div>	
<div class="holder">
	<%= f.submit :class => "button" %>
</div>	
<% end %>
