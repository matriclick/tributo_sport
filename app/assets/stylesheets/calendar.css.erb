#year_calendar table {
  width:auto;
  border-collapse:collapse;
}

#year_calendar td, #year_calendar th {
  border:none;
  font-family: "Lucida Grande",arial,helvetica,sans-serif;
  font-size: 10px;
  text-align: center;
  padding:2px;
}

#year_calendar th {
  background: #DDD;
  color: #666;
  border:2px solid #FFF;
}

#year_calendar td.notmonth {
  background: #FFF;
}

#year_calendar td {
  color: #777;
  vertical-align: top;
}

#year_calendar #month {
  text-align: center;
}

#year_calendar .reserved {
  padding:6px;
  background-color: #F6A0A4;
  text-decoration: line-through;
}

#year_calendar .available {
  padding:6px;
  background-color: #D6E8D5;
}

