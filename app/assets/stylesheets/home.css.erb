@charset "UTF-8";
/* CSS Document */

/* ------------------------ Home In CSS ------------------------ */

.slider {
	z-index:0;
}
.home_post {
	color:grey; 
	margin-top:5px;
}
.home_post p {
	margin-top:5px;
}

.input_wrapper {
	font-size:25px;
	margin-top:25px;
	padding:9px;
	width:380px;
	-webkit-border-radius: 3px;
  	-moz-border-radius: 3px;
  	-ms-border-radius: 3px;
  	-o-border-radius: 3px;
  	border-radius: 3px;
}
.home_input_wrapper {
	font-size:25px;
	margin-top:25px;
	padding:9px;
	width:330px;
	-webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  border-radius: 3px;
}
.button_sign_in {
	width:187px;
	height:54px;
	background:url(<%= asset_path 'button_inscribirse.png' %>);
	color:#fff;
	font-size:20px;
	margin-top:26px;
	cursor:pointer;
	-webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  border-radius: 3px;
	border:solid 1px #555;
}
.button_sign_in:hover {
	width:187px;
	height:54px;
	background:url(<%= asset_path 'button_inscribirse_on.png' %>);
	color:#fff;
	font-size:20px;
	margin-top:26px;
	cursor:pointer;
	-webkit-border-radius: 3px;
  -moz-border-radius: 3px;
  -ms-border-radius: 3px;
  -o-border-radius: 3px;
  border-radius: 3px;
	border:solid 1px #555;
}
.video_top_home {
	float:left;
  	margin: 15px 0 0 0;
} 
.share_home {
  height: 20px;
  left: 30%;
  margin: 40px 0 0 0;
  position: relative;
}
.comparte_matriclick {
	float:left;
	width:175px;
}
.main_content_home {
	width:100%;
	background: url(<%= asset_path 'fondo_cajas_principales_home.png' %>);
}
.content_top {
	width:950px;
	padding: 10px;
}
.texto_izquierda {
	float:left;
	width:405px;
	margin-left:10px;
}
.texto_derecha {
	float:right;
	width:405px;
	margin-left:10px;
}
.h1 {
	font-size:34px;
	color:#0071BC;
}
.h1_segundo {
	font-size:24px;
	color:#0071BC;
}
.bajada_titulo {
	font-size:14px;
	color:#0071BC;
}
.mover {
	margin-left:18px;
}
.texto_bajada {
	font-size:13px;
	color:#4D4D4D;
	margin-top:10px;
	line-height:18px;
}
#botones_despues_bajada {
	text-align:center;
}
.img_inscribete {
	width:323px;
	height:62px;
	float:left;
	margin: 24px 0 5px 80px;
	background:url(<%= asset_path 'inscribete.png' %>);
	
}
.foto_derecha {
	width:380px;
	height:222px;
	float:left;
	margin-top:37px;
}
.content_middle {
	width:100%;
	height:117px;
	float:left;
	background:url(<%= asset_path 'fondo_div_middle.png' %>);
	clear:both;
}
.middle_sign_in {
	float:left;
	width:auto;
	margin-top:-10px;
	margin-left:25px;
}
.facebook_google_sign_in {

}
.facebook_google_sign_in a {
	color:#888888;
	padding:0px 4px;
}
.facebook_google_sign_in a:hover {
	color:#999;
}
.no_register_sign_in {
	float:left;
	padding-left:25px;
}
.no_register_sign_in a {
	color:#ccc;
}
.no_register_sign_in a:hover {
	color:#999;
}
.content_bottom {
	width:960px;
	background: url(<%= asset_path 'fondo_cajas_principales_home.png' %>);
}
.link_home a {
	color:#0088CC;
}
.link_home a:hover {
	color:#333;
}
.boxInfo {
  float: left;
  margin: 0 0 12px 0px;
  padding-right: 25px;
	padding-left:25px;
  width: 265px;
	height:215px;
}
.boxInfo_img {
	width:65px;
	height:80px;
	margin-left:52px;
}
.boxInfo_titulo {
	font-size:16px;
	margin-bottom:10px;
	font-weight:bolder;
}
.boxInfo_p {
	font-size:12px;
	width:95%;
	line-height:15px;
}
.banner_campana_home {
	height:150px;
}
.banner_campana_home a:hover{
	height:150px;
	zoom: 1;
	filter: alpha(opacity=70);
	opacity: 0.7;
}
.greyhover:hover {
	background:#EEE;
}

