div#invitee_counts {
	background:white;
	border:1px solid #dedede;
	margin:10px auto 20px auto;
	padding:10px;
	width:90%;
	table {
		text-align:center;
		td.left_column {
			text-align:right;
		}
	}
}
table#bdt_table {
	text-align:left !important;
}
div.budget_total{
	float:left;
	width:45%;
	background-color:white;
	padding:5px;
	table {
		width:100%;
		td {
			padding:2px;
		}
	}
}
table.budget_list {
	margin-top:30px;
	td.left_column {
		width:80px;
	}
}
tr.no_border {
	border:none;
	td {border:none;}
}

/*----------------------------- Caga budget (top-right) -------------------------------*/
.caja_budget_bronce {
	width:140px;
	height:20px;
	float:left;
	background:url(<%= asset_path 'icono_bronce.png' %>) no-repeat;
}
.caja_budget_silver {
	width:140px;
	height:20px;
	float:left;
	background:url(<%= asset_path 'icono_silver.png' %>) no-repeat;
}
.caja_budget_gold {
	width:140px;
	height:20px;
	float:left;
	background:url(<%= asset_path 'icono_gold.png' %>) no-repeat;
}
.caja_budget_reservas {
	width:140px;
	height:20px;
	float:left;
	background:url(<%= asset_path 'icono_reservas.png' %>) no-repeat;
}
.texto_caja_budget a {
	color:#666;
}
.texto_caja_budget {
	float:left;
	margin:2px 0 0 25px;
}
.numbers_caja_budget {
	float:right;
	margin:3px 0 0 0;
}

/*----------------------------- Box budget -------------------------------*/
.small_font {
	font-size:10px;
}

.full_budget {
	float:left;
	margin: 0 15px 0 0;
}
.full_budget_last {
	float:left;
}
.box_budget {
	float:left;
	width:248px;
	background:#fff;
}
.icono_pos {
	position:relative;
	top:2px;
}
.bb_titulo {
	float:left;
	height:38px;
	margin:10px 0 0 11px;
	width:100px;
	border-right:solid 1px #ccc;
}
.bb_filtro {
	float:left;
	height:30px;
	margin:10px 0 0 10px;
}
.bb_table {
	float:left;
	width:100%;
}
.total_budget {
	float: left;
	width:248px;
	clear:both;
	margin-top:20px;
	height:50px;
	font-size:11px;
	background:#fff;
}
.total_ps {
	position:relative;
	left:19px;
	top:3px;
}
.total_price {
	float:left;
	width:45%;
	margin:10px 0 0 23px;
}
.price_right {
	float:right;
}
.budget_table {
	width:96%;
	color:#444;
	font-size:11px;
	padding:1px 0 1px 5px;
}
/*----------------------------- Final total budget -------------------------------*/

.full_final_budget {
	width:100%;
	float:left;
	margin:20px 0 0 0;
	border-top:dotted 1px #666;
}
.ffb_titulo {
	position:relative;
	margin:20px 0 10px 0;
	color:#444;
}
.box_final_budget {
	height:60px;
	background:#FFF;
}
.total_pss {
	float:left;
	width:45%;
	margin:23px 0 0 20px;
	text-align:center;
}
.total_range_price {
	float:left;
	width:45%;	
	margin:23px 0 0 20px;
	text-align:center;
}

/*----------------- Fancy Budget -----------------------*/

.fancy_budget_box {
	width:195px;
	height:120px;
	padding:20px;
}
.title_fancy_budget_box {
	width:100%;
	text-align:center;
	padding-bottom:20px;
}
.fancy_budget_type {
	float:left;
}
.budget_type_subtitle {
	color:#ccc;
	text-align:center;
}
.budget_row {
	clear:both;
	height:35px;
}
.budget_item_supplier_name {
	font-weight:bold;
	font-size:11px;
}
.budget_item_ic_name, .budget_item_name {
	font-size:9px;
	color:#ababab;
}
.budget_item_ic_name {
	font-style:italic;
}
.budget_item_check {
	margin-right:5px;
}
/*----------------- New Fancy Budget -----------------------*/
div#budget_images {
	width:200px;
	margin:20px auto;
	img {
		margin:10px;
	}
}
div#budget_price {
	margin-top:40px;
	margin-bottom:10px;
	text-align:center;
}
div#budget_price p {
	text-align:center;
}