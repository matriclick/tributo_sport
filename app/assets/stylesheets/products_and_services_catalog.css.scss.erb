.action_button {
	-webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
	float:left;
	margin-right:5px;
	height:65px;
	width:70px;
	background:#eee;
	border:2px solid #bbb;
	text-align:center;
	position:relative;
	text-decoration:none;
	color:#555;
	.image {
		height:30px;
		width:30px;
		margin:3px auto 6px;
	}
	a.cancel_action {
		background-color:#bbb;
		border:solid 1px #bababa;
    color:white;
    font-weight: 700;
    height: 11px;
    line-height: 11px;
    position: absolute;
    right: 3px;
    top: 3px;
    width: 11px;
		display:none;
	}
	a.cancel_action:hover {
		color:#0082FF;
		background-color:#ccc;
	}
}
.action_button:hover {
	border:2px solid #555;
	cursor:pointer;
	color:black;
	text-decoration:none;
	.cancel_action {
		display:block;
	}
}
