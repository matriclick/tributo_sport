/*------------- SHOW -------------------------*/
.blog_show {
	width:100%;
	float:left
}
.blog_titulos_show {
	font-family:helvetica, sans-serif;
	font-size: 17px;
	font-weight:bold;
	padding:0 0 5px 0;
	color: #333;
	font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
}
.blog_fecha_show {
	font-weight:lighter;
	font-size:11px;
	color:#999;
	margin-bottom:10px;
}
.blog_texto_introduction p {
	color:#666;
	font-size:17px;
	font-weight:lighter;
	line-height:17px;
	padding:0px 10px 0px 0;
	text-align:justify;
	float:left;
	width:850px;
	margin-left:10px;
	margin-top:10px;
}
.blog_texto_introduction a {
	color: #444;
	text-decoration:underline;
}
.blog_texto_content p {
	line-height:17px;
	text-align:justify;
	color: #555;
	font-family: Georgia, Times, 'Times New Roman', serif;
	font-size: 13px;
}
.blog_texto_content a {
	color: #555;
	font-family: Georgia, Times, 'Times New Roman', serif;
	font-size: 13px;
	text-decoration:underline;
}
.blog_texto_content ul {
	margin:-40px 0px 10px 20px;
	padding:0px;
}
.blog_texto_content ul li {
	font-family: Georgia, Times, 'Times New Roman', serif;
	font-size: 13px;
	color: #555;
	margin:0px;
	padding:0px;
	list-style-type: circle;
}
.blog_texto_content ol {
	margin:-40px 0px 10px 20px;
	padding:0px;	
}
.blog_texto_content ol li {
	font-family: Georgia, Times, 'Times New Roman', serif;
	font-size: 13px;
	color: #555;
	margin:0px;
	padding:0px;
	list-style-type: lower-alpha;
}

.blog_share_show {
  	background: #F5F5F5;
  	padding: 5px 5px 5px 5px;
	margin-bottom:10px;
}
.otros_articulos {
	font: 13px/1.7em Georgia,Times,"Times New Roman",serif;
	color:#888;
	padding-top:10px;
	margin-bottom:20px;
	font-size: 10px;
	font-weight: bold;
	letter-spacing: 1.5px;
	text-transform: uppercase;
	font-style: normal;
}

.post_grey_hover:hover {
	background:#F5F5F5;
}
/*------------ SHOW - SUPPLIERS ----------*/

.product_box_show {
	float:left;
	border:solid 1px #ccc;
	padding:5px 5px 5px 4px;
	font-size:11px;
	background:#F5F5F5;
	margin:0px 10px 10px 10px;
	width:140px;
	text-align:center;
}
.product_image_container_show {
	background:#fff;
	width:140px;
	height:110px;
	text-align:center;
	border:solid 1px #ddd;
	position:relative;
	display:table;
}
.product_image_show {
	display:table-cell;
	vertical-align:middle;
}

/*------------- Pagination -------------------------*/

.apple_pagination {
  background: #f9f9f9;
  border: 1px solid #e5e5e5;
  text-align: center;
  padding: 1em;
  cursor: default;
	clear:both;
}
.apple_pagination a, .apple_pagination span {
	padding: 0.2em 0.3em; 
}
.apple_pagination .disabled {
  color: #aaaaaa; 
}
.apple_pagination .current {
  font-style: normal;
  font-weight: bold;
  background-color: #bebebe;
  display: inline-block;
  width: 1.4em;
  height: 1.4em;
  line-height: 1.5;
  -moz-border-radius: 1em;
  -webkit-border-radius: 1em;
  border-radius: 1em;
  text-shadow: rgba(255, 255, 255, 0.8) 1px 1px 1px; 
}
.apple_pagination a {
  text-decoration: none;
  color: black; 
}
.apple_pagination a:hover, .apple_pagination a:focus {
  text-decoration: underline; 
}