	padding:5px 5px 5px 10px;
	width:99%;
	background:#F5F5F5;
}
.blog_titulos {
	font-family:helvetica, sans-serif;
	font-size:14px;
	font-weight:bold;
	margin:5px 0px 5px 0px;
	
}
.blog_texto {
	color:#777;
}
.post_container {
	float:left; 
	margin:8px; 
	background:#FFF; 
	border:solid 1px #cccccc;
}
.top_dottedLine {
	border-top:dotted 1px #ccc;
}
.main_post_image {
 	width:740px;
}
