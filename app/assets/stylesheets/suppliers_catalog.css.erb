/* star rating system*/

/* progress bar */

.star-rating-wrap{
    position: relative;
}

.star-rating-wrap, .star-rating-value, .star-rating-text {
    /* The width and height of your image */
    width: 130px; height: 30px;
}

.star-rating-wrap, .star-rating-value {
    background:url(<%= asset_path("estrellas.png") %>) no-repeat;
}
            
.star-rating-text {
    position: absolute;
    top:0; left:0;

    padding-top: 5px;
                
    color: #fff;
    text-align: center;
    width: 100%;
}
