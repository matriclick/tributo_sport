/*---------------------------------- General ---------------------------------*/ 

.header {
	width: 960px;
	height: 85px;
}

.logoContainer {
	width: 200px;
	height: 90px;
	position: relative;
	top: 0px;
	background: #fff;
	left: 20px;
	float:left;
}

.logo {
	background: url(<%= asset_path 'logo_matri.png' %>);
	float:left;
	width: 171px;
	height: 70px;
	margin-top: 10px;
	margin-left: 10px;
}

.container {
	float:left;
	height: 100%;
	padding:10px 20px 10px 20px;
	line-height: 15px;
}

.profileBlankField {
	font-style:italic;
	color:gray;
}

#profileBox{
	width:100%;
	height:230px;
}

#profileImage {
	height:150px;
	float:left;
	margin:20px 10px 10px 10px;
}
.profileNumbers, .profileInfo {
	margin:20px 10px 0px 20px;
	font-size: 12px;
}
.profileInfo {
	float:left;
	width:48%;
}
.profileNumbers {
	margin-right:30px;
	float:right;
}
.profileNumbers a {
	font-family:helvetica, trebuchet ms, sans-serif;
	position:relative;
	bottom:10px;
}
.h5 {
	font-size:12px;
}


/*------------------------------- fin General ---------------------------------*/
/*------------------------------- Supplier Sign_in ---------------------------------*/
#signIn{
	float:right;
	margin-bottom: 5px;
    margin-top: 5px;
}

.profileMenu a {
	font-size:12px;
	color:gray;
}
.profileMenu a:hover {
	color:#2C88CC;
	text-decoration:underline;
}
.profileMenu {
	float:right;
	line-height: 15px;
	color:#999;
	position:relative;
}

.profileDataBox {
	float:right;
	clear:right;
	margin-top:5px;
}

.profileMenuImage {
	height:70px;
	float:left;
	margin-right: 10px;
}
.profileMenuImage img {
	border: solid 1px #ccc;
}

.profileMenuInfo {
	float:left;
}
.profileMenuInfo a {
	font-size:10px;
}
/*------------------------------- fin Supplier Contacts ---------------------------------*/
#supplier_account_image {
	bottom:0px;
}
.required {
	color:#F64747;
}
